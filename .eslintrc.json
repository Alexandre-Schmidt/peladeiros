{
  "extends": "@rocketseat/eslint-config/react",
  "rules": {
    "semi": [2, "always"],
    "dot-notation": "off",
    "react-hooks/exhaustive-deps": "off",
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "endOfLine": "auto"
      }
    ]
  },
  "globals": {
    "JSX": "readonly"
  }
}
